<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="tag-create_table_working-calendar" author="danil">
        <tagDatabase  tag="create-table-working-calendar"/>
    </changeSet>

    <changeSet id="create_table_working-calendar" author="danil">

        <createTable tableName="working_calendar">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="calendar_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="is_holiday" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>